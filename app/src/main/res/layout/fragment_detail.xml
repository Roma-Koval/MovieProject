<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:fillViewport="true"
    tools:context=".ui.detail.DetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detailToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/back_icon"
            app:titleTextColor="@color/white_text" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:constraint_referenced_ids="ratingName, overviewName,
            genresName, icon_date, icon_info, icon_time, timeName"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/backgroundPoster"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="0.05"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@id/poster"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailToolbar" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/poster"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detailToolbar"
            app:shapeAppearanceOverlay="@style/cornerImageView"
            tools:layout_width="match_parent"
            tools:src="@tools:sample/avatars" />

        <ProgressBar
            android:id="@+id/detailProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/progressBarColor"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/detailErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/red_error_text"
            android:textSize="15sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Error message"
            tools:visibility="visible" />

        <Button
            android:id="@+id/detailErrorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/button_color"
            android:text="@string/try_again"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/detailErrorText"
            app:layout_constraintStart_toStartOf="@+id/detailErrorText"
            app:layout_constraintTop_toBottomOf="@+id/detailErrorText"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/genresName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/genre"
            android:textColor="@color/white_text"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingName" />

        <TextView
            android:id="@+id/genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/white_text"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/genresName"
            app:layout_constraintTop_toBottomOf="@+id/ratingName"
            tools:text="genres" />

        <TextView
            android:id="@+id/ratingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/rating"
            android:textColor="@color/white_text"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/poster"
            app:layout_constraintTop_toBottomOf="@+id/poster" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/white_text"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/ratingName"
            app:layout_constraintTop_toBottomOf="@+id/poster"
            tools:text="8.8" />

        <TextView
            android:id="@+id/releaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/white_text"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/icon_date"
            app:layout_constraintTop_toBottomOf="@+id/poster"
            tools:text="2024-01-01" />

        <TextView
            android:id="@+id/overviewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="24dp"
            android:text="@string/overview"
            android:textColor="@color/white_text"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/icon_info"
            app:layout_constraintTop_toBottomOf="@+id/genres" />

        <TextView
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white_text"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/overviewName"
            tools:text="Description" />

        <ImageView
            android:id="@+id/icon_time"
            android:layout_width="26dp"
            android:layout_height="29dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_time"
            app:layout_constraintStart_toEndOf="@+id/rating"
            app:layout_constraintTop_toBottomOf="@+id/poster" />

        <TextView
            android:id="@+id/timeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="24dp"
            android:text="@string/min"
            android:textColor="@color/white_text"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/duration"
            app:layout_constraintTop_toBottomOf="@+id/poster" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/white_text"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/icon_time"
            app:layout_constraintTop_toBottomOf="@+id/poster"
            tools:text="122" />

        <ImageView
            android:id="@+id/icon_date"
            android:layout_width="26dp"
            android:layout_height="29dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_date"
            app:layout_constraintStart_toEndOf="@+id/timeName"
            app:layout_constraintTop_toBottomOf="@+id/poster" />

        <ImageView
            android:id="@+id/icon_info"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/genres" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>